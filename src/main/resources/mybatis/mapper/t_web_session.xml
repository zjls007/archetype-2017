<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cy.dao.WebSessionDAO" >
    <resultMap id="webSessionMap" type="webSession" >
        <id column="id" property="id" />
        <result column="session_id" property="sessionId" />
        <result column="session_ser_val" property="sessionSerVal" />
    </resultMap>

    <sql id="allColumns" >
        id, session_id, session_ser_val
    </sql>

    <insert id="insert" parameterType="webSession" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO t_web_session(session_id, session_ser_val) VALUES (#{sessionId}, #{sessionSerVal})
    </insert>

    <delete id="deleteBySessionId">
        DELETE FROM t_web_session where session_id = #{sessionId}
    </delete>

    <select id="getBySessionId" resultMap="webSessionMap">
        SELECT
        <include refid="allColumns"/>
        FROM t_web_session WHERE session_id = #{session_id}
    </select>

    <update id="updateBySessionId" parameterType="webSession">
        UPDATE t_web_session
        <set>
            session_ser_val = #{sessionSerVal}
        </set>
        WHERE session_id = #{sessionId}
    </update>
</mapper>